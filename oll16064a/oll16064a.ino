void oll_init() {
  pinMode(OLL_PIN_DR2,  OUTPUT);
  pinMode(OLL_PIN_CL2,  OUTPUT);
  pinMode(OLL_PIN_CL1,  OUTPUT);
  pinMode(OLL_PIN_M,    OUTPUT);
  pinMode(OLL_PIN_DL1,  OUTPUT);

  digitalWrite(OLL_PIN_DR2, LOW);
  digitalWrite(OLL_PIN_CL2, LOW);
  digitalWrite(OLL_PIN_CL1, LOW);
  digitalWrite(OLL_PIN_M,   LOW);
  digitalWrite(OLL_PIN_DL1, LOW);
}

void oll_write_frame(uint8_t* frm) {
  digitalWrite(OLL_PIN_CL1, !digitalRead(OLL_PIN_CL1));
  digitalWrite(OLL_PIN_DL1, !digitalRead(OLL_PIN_DL1));
  digitalWrite(OLL_PIN_CL1, !digitalRead(OLL_PIN_CL1));
  digitalWrite(OLL_PIN_DL1, !digitalRead(OLL_PIN_DL1));
  digitalWrite(OLL_PIN_M, !digitalRead(OLL_PIN_M));
  for (row = 0; row < 64; row++) {
    if (row == 0) {
      digitalWrite(OLL_PIN_DL1, HIGH);
    }
    for (col = 0; col < 20; col++) {
      dat = *frm++;
      for (i = 0; i < 8; i++) {
        digitalWrite(OLL_PIN_CL2, HIGH);
        digitalWrite(OLL_PIN_DR2, dat & 0xF0);
        digitalWrite(OLL_PIN_CL2, LOW);
        dat = dat << 1;
      }
    }
    digitalWrite(OLL_PIN_CL1, HIGH);
    digitalWrite(OLL_PIN_CL1, LOW);
    if (row == 0) {
      digitalWrite(OLL_PIN_DL1, LOW);
    }
  }
}

void setup() {
  oll_init();
}

void loop() {
  oll_write_frame(frame);
